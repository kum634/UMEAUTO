namespace Lib;

require_once("Conf.inc");
require_once("Common/Page.class");
require_once("Common/DAC.class");

class Page_Template_List extends Page {
	public $title;
	public $rows;
	/**
	 * 
	 */
	public function default(){
		Lib::authPage($this);
		$this->title = "Templates - ";

		$dac = new DAC(Lib::connection(), "mysql", false);
		$dac->setColumn("ROWID");
		$dac->setColumn("tl_name");
		$dac->setColumn("tl_type");
		$dac->setColumn("file_name");
		// added: 170907
		$dac->setColumn("file_path");
		$dac->setColumn("tm_update");
		$dac->setOrder("tl_name");
		
		if (!$dac->selectRows("t_template", $rows)) {
			$_SESSION[DOMAIN][$this->sessionKey]["errors"]["message"] = $dac->message;
			return false;
		} else {
			$this->rows = $rows;
			return true;
		}
	}
}
/**
 * ページインスタンス生成
 * 実行パス、ルール連想配列及びページセッション名を指定する
 */
$page = new Page_Template_List(__DIR__, null,"Lib.page.template_list");
/**
 * イベント発生時のコールバック関数、移動先及びセッション保存の有無をセットしload()を実行する
 */
$page->setEvent("default", null, array($page, "default"), "", false);
$page->load();
