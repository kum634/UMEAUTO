namespace Lib;

class Rule {
	/**
	 * @property-read int $length 最大文字数
	 * @property-read string $pattern 禁則正規表現パターン
	 * @property-read string $convert かな変換オプション
	 * @property-read string $default 既定値
	 * @property-read bool $isRequired 必須判定
	 * @property-read bool $useSession ポストデータをセッションに保存する場合はtrue
	 */
	private $length;
	private $pattern;
	private $convert;
	private $default;
	private $isRequired;
	private $useSession;
	/**
	 * コンストラクタ
	 *
	 * @param int $length 最大文字数
	 * @param string $pattern 禁則正規表現パターン（マッチする文字が除去される）
	 * @param string $convert かな変換オプション（mb_convert_kana第2引数）
	 * @param string $default 既定値（フィルター結果が空文字となる場合に置き換える）
	 * @param bool $isRequired 必須判定（ページセッションに保存する際、空文字の場合にポストエラーを追加する）
	 * @param bool $useSession ポストデータをページセッションに保存する場合はtrueにする
	 */
	public function __construct(int $length, string $pattern = null, string $convert = null, string $default = null, bool $isRequired, bool $useSession) {
		$this->length = $length;
		$this->pattern = $pattern;
		$this->convert = $convert;
		$this->default = $default;
		$this->isRequired = $isRequired;
		$this->useSession = $useSession;
	}
	/**
	 * マジックメソッドゲッター
	 *
	 * @param string $name メンバ変数名
	 */
	public function __get(string $name) {
		return $this->$name;
	}
	/**
	 * マジックメソッドセッター
	 *
	 * @param string $name メンバ変数名
	 * @param mixed $value メンバ変数値
	 */
	public function __set(string $name, $value) { }
}